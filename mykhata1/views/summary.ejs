    <script>
         $(document).ready(function() {
            $("#thisweek").click(function(){
            $(".this-week").show();
            $(".last-week").hide();
            $(".last-month").hide();
            $("#thisweek").css("color","#0099CC");
            $("#lastweek").css("color","rgb(182,181,181)");
            $("#lastmonth").css("color","rgb(182,181,181)");
        });
        $("#lastweek").click(function(){
            $(".last-week").show();
            $(".this-week").hide();
            $(".last-month").hide();
            $("#thisweek").css("color","rgb(182,181,181)");
            $("#lastweek").css("color","#0099CC");
            $("#lastmonth").css("color","rgb(182,181,181)");
        });
        $("#lastmonth").click(function(){
            $(".last-month").show();
            $(".this-week").hide();
            $(".last-week").hide();
            $("#thisweek").css("color","rgb(182,181,181)");
            $("#lastmonth").css("color","#0099CC");
            $("#lastweek").css("color","rgb(182,181,181)");
        });
        });
        
    </script>
