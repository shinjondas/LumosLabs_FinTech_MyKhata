            margin-top: -45%;
        }
        a.underline
        {
            position: relative;
        }

        a.underline:before {
            margin-top: 0;
            content: "";
            position: absolute;
            width: 0;
            height: 3px;
            bottom: 0;
            left: 20%;
            background-color: #0099CC;
            visibility: hidden;
            transition: all 0.5s ease-in-out;
        }
        a.underline:hover:before {
            margin-top: 0;
            visibility: visible;
            width: 62%;
        }
